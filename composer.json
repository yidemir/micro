{
    "name": "yidemir/mikro",
    "description": "Micro approach to traditional",
    "keywords": [
        "yidemir",
        "mikro",
        "framework",
        "php",
        "tool"
    ],
    "homepage": "https://github.com/yidemir/mikro",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "YÄ±lmaz Demir",
            "email": "demiriy@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "files": [
            "src/Auth.php",
            "src/Cache.php",
            "src/Config.php",
            "src/Console.php",
            "src/Container.php",
            "src/Crypt.php",
            "src/Csrf.php",
            "src/Curl.php",
            "src/DB.php",
            "src/Error.php",
            "src/Event.php",
            "src/Flash.php",
            "src/Helper.php",
            "src/Html.php",
            "src/Jwt.php",
            "src/Locale.php",
            "src/Logger.php",
            "src/Pagination.php",
            "src/Request.php",
            "src/Response.php",
            "src/Router.php",
            "src/Table.php",
            "src/Validator.php",
            "src/View.php"
        ],
        "psr-4": {
            "Mikro\\Exceptions\\": "src/Exceptions"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mikro\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan"
    },
    "config": {
        "sort-packages": true
    }
}
